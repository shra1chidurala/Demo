				<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<set-variable value="#[sizeOf(payload)]" doc:name="size" doc:id="ad06275b-1f2e-4915-a65b-20b3f5bc2a40" variableName="size"/>
		<batch:job jobName="accountsBatch_Job" doc:id="e7e7c863-9411-4230-8546-e0aa9fd33545" >
			<batch:process-records >
				<batch:step name="Batch_Step" doc:id="9ab303fb-e2b6-428c-bfa5-ac9640a1b656" >
					<set-variable value="#[payload.Name]" doc:name="cname" doc:id="a8349ccb-50d3-49f1-8eec-8d602b930390" variableName="cname"/>
					<logger level="INFO" doc:name="Logger" doc:id="dae8287e-8883-4d5e-9a69-a42b92f70b93" />
				</batch:step>
				<batch:step name="Batch_Step1" doc:id="a1e816fa-4ab0-4c2e-9183-d58f2eb19d7c" >
					<logger level="INFO" doc:name="Logger" doc:id="3c56f432-608b-4ceb-8308-d5f6d20c2f36" />
				</batch:step>
			</batch:process-records>
			<batch:on-complete >
				<logger level="INFO" doc:name="Logger" doc:id="88b18950-25e5-4219-a5f6-c161949da9c5" />
			</batch:on-complete>
		</batch:job>
	</flow>
	<flow name="getCSVaccounts" doc:id="a23f8edb-4d47-4b95-bf6c-628881db1ec3" initialState="stopped">
		<file:listener doc:name="accounts.csv" doc:id="6616eff5-ee2f-47ac-b142-b92feb2d74b6" config-ref="File_Config" directory="C:\Users\USER\Desktop\Mule4-MCD\APDevFundamentals4.3_studentFiles_SP_31aug2020\APDevFundamentals4.3_studentFiles_SP_31aug2020\resources\input" moveToDirectory="C:\Users\USER\Desktop\Mule4-MCD\APDevFundamentals4.3_studentFiles_SP_31aug2020\APDevFundamentals4.3_studentFiles_SP_31aug2020\resources\output">
			<scheduling-strategy >
